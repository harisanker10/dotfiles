{
    "layer": "top",
    "position": "top",
    "spacing": 0,
    "height": 10,

    "modules-left": [
        "hyprland/workspaces",
        "disk",
        "cpu",
        "memory"
    ],
    "modules-center": [
        "hyprland/window",
        "mpris"
    ],
    "modules-right": [
        "network",
        "backlight",
        "pulseaudio",
        "battery",
        "custom/power",
        "clock#calender",
        "clock"
    ],

    "backlight": {
        "device": "intel_backlight",
        "format": "{icon}  {percent}%",
        "format-icons": ["ÔÜÖ"],
        "on-click": "brightnessctl set 20%+",
